{
  "extends": "typestrict",
  "rules": {
    "no-debugger": true,
    "mocha-avoid-only": true,
    "prefer-const": true,
    "no-var-keyword": true,
    "interface-name": [true, "never-prefix"],
    "resolveJsonModule": true,
    "no-commented-code": {
      "severity": "warning"
    },
    "no-use-before-declare": false
  },
  "linterOptions": {
    "exclude": "src/**/*.json"
  }
}
